.halfPage {
  display: flex;
  width: 100vw;
  height: 100vh;
  background-color: aliceblue;
}

.arrow {
  position: fixed;
  left: 40rpx;
  top: 73rpx;
  display: flex;
  width: 35rpx;
  height: 35rpx;
  border-left: 4rpx solid #6dc6ff;
  border-top: 4rpx solid #6dc6ff;
  transform: rotate(-45deg);
}

.headerContainer {
  z-index: 10000;
  box-sizing: border-box;
  padding-top: 50rpx;
  width: 100%;
  height: 140rpx;
  line-height: 90rpx;
  position: relative;
  text-align: center;
  font-size: 32rpx;
  /* display: flex;
  justify-content: space-between; */
  background-color: #fff;
  position: fixed;
  top: 0;
}

.headerButton {
  margin-top: 50rpx;
  width: 60rpx;
  padding-left: 20rpx;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}

.headerImage {
  width: 40rpx;
  height: 40rpx;
}

.headerText {
  display: inline-block;
  padding-right: 50rpx;
}